    <div id="toast" class="toast"></div>
    
    <script>
        // **********************************
        // *  config.js for HTML Sandbox    *
        // *        by thewaytozion         *
        // **********************************

        var username = "thewaytozion";
        
        // Initialize username in UI
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('username-field').textContent = username;
            document.getElementById('username-credit').textContent = username;
        });
        
        function addUserSource() {
            addSource(`${username}'s Repository`);
        }
        
        function addSource(sourceName) {
            const toast = document.getElementById('toast');
            toast.textContent = `Added ${sourceName} to sources`;
            toast.style.opacity = 1;
            
            setTimeout(() => {
                toast.style.opacity = 0;
            }, 2000);
        }
        
        function closeModal() {
            alert('This would close the modal in a real app');
        }
        
        document.querySelector('.url-input').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                const value = this.value;
                if (value) {
                    addSource(value);
                    this.value = '';
                }
            }
        });
    </script>
